!!!
html
  head
    title Visualizer
    script(type='text/javascript', src='http://code.jquery.com/jquery-1.8.3.min.js')
    style(type='text/css')
      td.something.selected.wrong {
        background: red;
      }
      td.something.selected {
        background: #99f;
      }
      td {
        background: #999;
        width: 20px;
        height: 20px;
        text-align: center;
      }
      td.something {
        background: #fff;
      }
  body
    table
      for row in board
        tr
          for item in row
            td(class=item.style, data-group=item.group) #{item.value}
    input(id="selectedstring", type="text")
    script(type='text/javascript')
      $(document).ready(function() {
        $('td').mouseover(function() {
          var group = $(this).data('group');
          $('#selectedstring').val(group).change();
        });

        var oldtext;
        $('#selectedstring').change(function() {
          if(oldtext) {
            $('.' + oldtext).removeClass("selected");
          }
          var group = $('#selectedstring').val();
          $('.' + group).addClass("selected");
          oldtext = group;
        });
      });

